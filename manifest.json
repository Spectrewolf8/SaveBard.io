{
  "manifest_version": 3,
  "name": "SaveBard.io",
  "description": "Save your bard responses like a pro!",
  "version": "1.0",
  "action": {
    "default_popup": "/popup/popup.html",
    "default_icon": "/images/BardSaveLogo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://bard.google.com/*"],
      "js": ["/scripts/content.js"]
    }
  ],
  "permissions": ["tabs", "scripting", "activeTab"]
}
